
@using Lab2.Models
@{
    ViewBag.Title = "Index";
}

<h2>Moduliai</h2>


@using (Html.BeginForm("Index", "Module", FormMethod.Post))
{

    <br>

    if (ViewData["Modules"] != null)
    {
        <div class="row">
            @foreach (var module in ViewData["Modules"] as List<ModuleList>)
                {
                    
                <div class="col-md-4" style="padding-bottom: 10px">
                    <div class="card" style="width: 18rem; border-style: dashed; border-color: black">
                        <div class="card-body">
                            <h3 class="card-title">@module.m_name</h3>
                            <p class="card-text">@module.m_desc</p>
                            @Html.ActionLink("Peržiūrėti modulį","UniqueModule", "Module",new{id = @module.id},new { @class = "btn btn-primary btn-large" })
                        </div>
                    </div>
                </div>

                }
        </div>
    }

}